@model TREERMUTL.Models.TREERMUTLCREATE
@{
    ViewData["Title"] = "Create";
} 

<style>

    .custom-file-button input[type=file] {
        margin-left: -2px !important;
    }

        .custom-file-button input[type=file]::-webkit-file-upload-button {
            display: none;
        }

        .custom-file-button input[type=file]::file-selector-button {
            display: none;
        }

    .custom-file-button:hover label {
        background-color: #dde0e3;
        cursor: pointer;
    }

</style>

<h1>แก้ไขข้อมูลต้นไม้</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">ชื่อต้นไม้</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">รายละเอียดต้นไม้</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="col-md-12 btn-group pb-2">

                <div class="form-group col-4 p-0">

                    <label asp-for="ProfilePhoto" class="control-label">รูปต้นไม้</label>

                    <img id="PreviewPhoto" src="~/Images/@Model.PhotoUrl" alt="Logo Image"
                         width="500" height="500" />

                    <span asp-validation-for="PhotoUrl" class="text-danger"></span>

                </div>

                <div class="col-1 p-0">
                </div>


            </div>
            <div class="form-group col-7 ">
                <div class="input-group custom-file-button mt-5 pt-5">
                    <input asp-for="ProfilePhoto" class="form-control custom-file-input" id="customFile">
                    <label class="input-group-text" for="customFile">ค้นหารูปภาพ</label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="แก้ไขข้อมูลต้นไม้" class="btn btn-primary" />
            </div>
            <div class="form-group pt-0 mt-0">
                <div ID="HiddenDiv" style="visibility: hidden;">
                    <input asp-for="PhotoUrl" id="PhotoUrl" />
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
